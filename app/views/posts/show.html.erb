

<div class="row">
	<div class="col-md-offset-2 col-md-8">
		<div class="panel panel-default">
		<div class="panel-heading center">
			<%= link_to 'Back', posts_path %><span style="float:right;"><small>posted </small><i><%= @post.created_at.strftime("%d %b. %Y") %></i></span>
		</div>
		<div class="panel-body">
		<i>Agent <%= link_to @post.user.name, @post.user %> needs an operative</i>
		<p> in <%= @post.location %> by <%= @post.deadline %></p>
		<h3 align="center"><%= @post.description %></h3>
		<i>Mission details:</i>
		<strong><%= @post.details %></strong>
		<br>
		<br>
		<%=link_to "Interested", vote_post_path(@post), method: "post", class: "btn btn-primary" %>
		<%= @post.votes.size %>
		<%= @post.votes.up.by_type(User).voters %>
		

		<% if @post.user == current_user %>
		<hr>
			These agents are interested in the mission:
			<hr>
			<%= link_to edit_post_path(@post) do %>
			<br>
        <span class="glyphicon glyphicon-edit"></span>
        Edit
      <% end %>
      <%= link_to @post, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-trash"></span>
              Delete
            <% end %>
		<% end %>
		</div>
	</div>

</div>