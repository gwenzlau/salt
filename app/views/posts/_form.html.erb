<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.hidden_field :status, :value => "0" %>
    <%= f.label :location %>
    <%= f.select :location, options_for_select([['New York City'], ['Los Angeles'], ['Nashville']]), class: "form-control" %>
<br>
    <%= f.label "Operation Title:" %>
    <%= f.text_field :description, class: "form-control", :placeholder => "Milk n cookies" %>
    <%= f.label :mission_details %>
    <%= f.text_field :details, class: "form-control", :placeholder => "I need cookies picked up from the Milkbar and delivered to..."%>
    <%= f.label :deadline %>
    <%= f.date_select :deadline, class: "form-control" %>
    

  </div>
  <div class="form-group" align="right">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>